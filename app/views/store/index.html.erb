<% if notice %>
  <p><%= notice %></p>
<% end %>

<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% if user_signed_in? %>
  <% @items.each do |item| %>
    <%= item.title %> | 
    <%= "$#{item.price.to_f/100}" %> | 
    <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
    <% end %>

<% else %>
  <% @items.each do |item| %>
    <%= item.title %> | <%= "$#{item.price.to_f/100}" %>
  <% end %>

<% end %>