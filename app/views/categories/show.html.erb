<%= @category.title %>


<% if user_signed_in? %>
  <% @category.items.each do |item| %>
    <%= item.title %> | <%= "$#{item.price.to_f/100}" %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
  <% end %>
<% else %>
  <% @category.items.each do |item| %>
    <%= item.title %> | <%= "$#{item.price.to_f/100}" %>
  <% end %>
<% end %>
